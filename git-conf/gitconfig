[user]
	name = Nick Phair
	email = nickphair@gmail.com
	signingkey = F6ED04E98D05ADBD
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
	autocrlf = input
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[diff "gz"]
    binary = true
    textconv = gunzip --stdout
[difftool]
	prompt = false
[push]
	default = nothing
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
[pull]
	rebase = false
[gpg]
	program = gpg
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
